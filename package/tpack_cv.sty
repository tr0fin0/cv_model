\newcommand{\summary}[2]{
    \begin{multicols}{2}
    \noindent \textit{#1}

    \columnbreak

    \noindent #2
    \end{multicols}
}


% cv building block
\newcommand{\topicblock}[5]{
    \vspace{5mm}
    \noindent\textscale{1.20}{#1}\\
    \textbf{#2}\hfill#3\qquad#4

    \begin{indented}
        \item[]#5
    \end{indented}
}

\newenvironment{indented}{
    \begin{list}{}{
        \setlength{\leftmargin}{5mm}
        \setlength{\parsep}{0mm}
        \setlength{\parskip}{0mm}
        \setlength{\itemsep}{0mm}
        \setlength{\topsep}{0mm}
    }}{\end{list}}

\newcommand{\topicline}[2]{
    \textbf{#1}: #2\\
}